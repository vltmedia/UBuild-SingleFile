{
  "name": "ubuild-singlefile",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build-linux": "bun build index.ts --compile --target=bun-linux-x64  --outfile ubuild-singlefile",
    "build-osx": "bun build index.ts --compile --target=bun-darwin-x64  --outfile ubuild-singlefile",
    "build-osx-mchip": "bun build index.ts --compile --target=bun-darwin-arm64  --outfile ubuild-singlefile",
    "build-windows": "bun build index.ts --compile --target=bun-windows-x64 --windows-icon=logo.ico --outfile ubuild-singlefile.exe"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "^0.27.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
